/* 遮罩 */
.mask{
  position: fixed;
  z-index: 99;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0,0,0,.6);
  -webkit-transition-duration: .3s;
  transition-duration: .3s;
}
.loading-box{
  position: fixed;
  width: 150px;
  height: 150px;
  border-radius: 10rpx;
  background-color: #fff;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 661;
}
.loading_tips{
  width: 100%;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  bottom: 20px;
}